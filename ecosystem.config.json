{
  "apps": [
    {
      "name": "cal-ai",
      "script": "dist/index.js",
      "cwd": "/var/www/cal-ai/server",
      "instances": 1,
      "exec_mode": "cluster",
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "log_file": "/var/log/pm2/cal-ai.log",
      "out_file": "/var/log/pm2/cal-ai-out.log",
      "error_file": "/var/log/pm2/cal-ai-error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true
    },
    {
      "name": "cal-ai-dev",
      "script": "dist/index.js",
      "cwd": "/var/www/cal-ai-dev/server",
      "instances": 1,
      "exec_mode": "cluster",
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3001
      },
      "env_development": {
        "NODE_ENV": "development",
        "PORT": 3001
      },
      "log_file": "/var/log/pm2/cal-ai-dev.log",
      "out_file": "/var/log/pm2/cal-ai-dev-out.log",
      "error_file": "/var/log/pm2/cal-ai-dev-error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true
    }
  ]
}