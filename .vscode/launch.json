{
    "version": "0.2.0",
    "configurations": [
        // ========== iOS CONFIGURATIONS (No Flavor Flag) ==========
        {
            "name": "Global (iOS)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": [
                "--dart-define=FLAVOR=global",
                "--no-enable-impeller"
            ]
        },
        {
            "name": "Iran (iOS)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": [
                "--dart-define=FLAVOR=iran",
                "--no-enable-impeller"
            ]
        },
        // ========== ANDROID CONFIGURATIONS (With Flavor Flag) ==========
        {
            "name": "Global (Android)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": [
                "--flavor",
                "global",
                "--dart-define=FLAVOR=global",
                "--no-enable-impeller"
            ]
        },
        {
            "name": "Iran (Android)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "args": [
                "--flavor",
                "iran",
                "--dart-define=FLAVOR=iran",
                "--no-enable-impeller"
            ]
        },
        // ========== WEB ==========
        {
            "name": "Flutter (Web)",
            "request": "launch",
            "type": "dart",
            "deviceId": "chrome",
            "args": [
                "--no-enable-impeller"
            ]
        },
        // ========== RELEASE / PROFILE (iOS) ==========
        {
            "name": "Global (Release - iOS)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--dart-define=FLAVOR=global",
                "--no-enable-impeller"
