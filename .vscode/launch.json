        // ========== RELEASE / PROFILE (Android) ==========
        {
            "name": "Global (Release - Android)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--flavor",
                "global",
                "--dart-define=FLAVOR=global",
                "--no-enable-impeller"
            ]
        }
    ]
